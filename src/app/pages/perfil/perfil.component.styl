@import "../../../assets/styles/vars"

.perfil-card
  display flex
  flex-direction column
  justify-content center
  align-items center
  max-width 500px
  min-width 300px
  margin-top 25px
  &.mat-card
    .mat-divider-horizontal
      display flex
      position relative
  .card-row
    display flex
    flex-direction row
    width 100%
    padding 5px 0px
    justify-content space-between
  .mat-card-header
    .mat-card-title
      text-align center
  .mat-card-content
    display flex
    flex-direction column
    width 100%
    margin-bottom 0
  .mat-card-actions
    display flex
    flex-direction row
    width 100%
    margin-bottom 0
    justify-content flex-end
    .mat-icon-button.cdk-program-focused
      .mat-button-focus-overlay
        opacity 0
    .row-profile-button
      border none
      margin 0
      padding 4px
      &:hover
        color backRed
  .perfil-avatar
    width 175px
    box-shadow 0px 2px 4px 0px rgba(0, 0, 0, 0.12)
    border-radius 50%
    margin 0 auto
    padding 3px
    border 3px solid backRed
    height auto
  .avatar-upload
    position relative
    max-width 200px
    margin 20px auto 10px auto
